<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 계정등록 페이지 로고, 취소 버튼-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/x_button"
                android:layout_gravity="right"
                android:id="@+id/back_btn"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계정 등록하기"
                android:fontFamily="@font/font1"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:textSize="30dp"/>
        </LinearLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_marginTop="30dp"
            android:columnCount="4"
            android:rowCount="5">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/left_image"
                android:drawablePadding="10dp"
                android:hint="아이디 입력"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="fill_horizontal"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/left_image2"
                android:drawablePadding="10dp"
                android:layout_marginTop="5dp"
                android:inputType="textPassword"
                android:hint="비밀번호 입력"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/phone_image"
                android:drawablePadding="10dp"
                android:layout_marginTop="5dp"
                android:hint="전화번호 입력"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/car_image"
                android:drawablePadding="10dp"
                android:layout_marginTop="5dp"
                android:hint="차량 번호 입력"/>
        </GridLayout>

    </LinearLayout>
</LinearLayout>